/* components/tea-unfin/tea-unfin.wxss */
.wrapper {
  position: relative;
  margin: 20rpx;
  padding: 10rpx 0;
  padding-top: 0;
  border-radius: 10px;
  box-shadow: 0 2px 4px rgba(0, 0, 0, .12), 0 0 6px rgba(0, 0, 0, .04); 
  background-color: #fff;
  overflow: hidden;
}

.itemHeader {
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: space-between;
  padding: 10px 16px;
}

.stuWrapper{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.studentInf {
  display: flex;
  flex-direction: column;
}

.name {
  padding: 0;
  font-size: 18px;
  font-weight: bold;
}

.stuId {
  padding: 0;
  font-size: 14px;
  color: #909399;
}

.reqType {
  height: 40px;
  line-height: 40px;
  font-size: 20px;
  font-weight: bold;
}


.reqTime {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-content: center;
  padding: 10rpx 16px;
}

.timeWrapper {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 10px 0;
}

.timeHeader {
  font-size: 12px;
  color: #92959b;
}

.time {
  font-size: 16px;
  font-weight: 550;
}

.totalTime {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.day {
  font-size: 18px;
  font-weight: 550;
  padding: 0 5rpx;
}

.word {
  font-size: 14px;
}

.footer {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 16px;
  border-top: 1px solid #f8f8f8;
}

.fooBtn {
  padding: 10px 0;
  font-size: 16px;
}

.content {
  width: 100%;
  font-size: 14px;
  word-break:break-all;
}